        <Label Content="costo:" Margin="331,47,0,67" Foreground="White" HorizontalAlignment="Left" Width="46"/>
        <Label x:Name="precioProducto" Content="0" Margin="369,47,0,68" Foreground="White" HorizontalAlignment="Left" Width="24"/>
        <Label x:Name="estado" Content="." Margin="134,82,0,28" Foreground="White" HorizontalAlignment="Left" Width="193" FontSize="11"/>
    </Grid>
</UserControl>
